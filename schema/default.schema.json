{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "AxisConfig": {
            "properties": {
                "fill": {
                    "description": "Bg color",
                    "type": "string"
                },
                "format": {
                    "description": "Custom format for fields, supported currenly is date with moment format (from / to)",
                    "properties": {
                        "from": {
                            "type": "string"
                        },
                        "to": {
                            "type": "string"
                        },
                        "type": {
                            "const": "date",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "key": {
                    "description": "Key to use from data returned",
                    "type": "string"
                },
                "stroke": {
                    "description": "Text / line colors",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ItemConfig": {
            "properties": {
                "chart_type": {
                    "enum": [
                        "area",
                        "line"
                    ],
                    "type": "string"
                },
                "date_range": {
                    "description": "Default date range filter in UI",
                    "enum": [
                        "last_10_years",
                        "last_1_day",
                        "last_1_hours",
                        "last_1_minutes",
                        "last_1_month",
                        "last_1_week",
                        "last_1_year",
                        "last_5_minutes",
                        "last_6_hours",
                        "today"
                    ],
                    "type": "string"
                },
                "date_range_format": {
                    "description": "Date range format to send to DB Query / URL",
                    "type": "string"
                },
                "debug": {
                    "type": "boolean"
                },
                "height": {
                    "description": "Item height",
                    "type": "string"
                },
                "query": {
                    "type": "string"
                },
                "refresh_interval": {
                    "description": "Interval for refresh eg (1s / 1m / 1h 10d)",
                    "type": "string"
                },
                "url": {
                    "description": "URL source (Array of JSON objects)",
                    "type": "string"
                },
                "user_agent": {
                    "description": "Custom user agent for URL source",
                    "type": "string"
                },
                "width": {
                    "description": "Item width",
                    "type": "string"
                },
                "x": {
                    "$ref": "#/definitions/AxisConfig",
                    "description": "Left to right axis"
                },
                "y": {
                    "$ref": "#/definitions/AxisConfig",
                    "description": "Top to bottom axis"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "items": {
            "items": {
                "$ref": "#/definitions/ItemConfig"
            },
            "type": "array"
        },
        "name": {
            "description": "Name for dashboard (title)",
            "type": "string"
        }
    },
    "type": "object"
}

