{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "AxisConfig": {
            "properties": {
                "fill": {
                    "description": "Bg color",
                    "type": "string"
                },
                "format": {
                    "description": "Custom format for fields, supported currenly is date with moment format (from / to)",
                    "properties": {
                        "from": {
                            "type": "string"
                        },
                        "timezone": {
                            "type": "string"
                        },
                        "to": {
                            "type": "string"
                        },
                        "type": {
                            "const": "date",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "key": {
                    "description": "Key to use from data returned",
                    "type": "string"
                },
                "stroke": {
                    "description": "Text / line colors",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "FSSource": {
            "properties": {
                "path": {
                    "type": "string"
                },
                "type": {
                    "const": "fs",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "ServerConfig": {
            "properties": {
                "host": {
                    "description": "Server host",
                    "type": "string"
                },
                "port": {
                    "description": "Server port",
                    "type": "number"
                }
            },
            "type": "object"
        },
        "SqliteSource": {
            "properties": {
                "path": {
                    "type": "string"
                },
                "query": {
                    "type": "string"
                },
                "type": {
                    "const": "sqlite",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Task": {
            "properties": {
                "command": {
                    "type": "string"
                },
                "cwd": {
                    "type": "string"
                },
                "every": {
                    "type": "string"
                },
                "verbose": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "URLSource": {
            "properties": {
                "type": {
                    "const": "url",
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "WidgetConfig": {
            "properties": {
                "chart_type": {
                    "enum": [
                        "area",
                        "line",
                        "table"
                    ],
                    "type": "string"
                },
                "date_range": {
                    "description": "Default date range filter in UI",
                    "enum": [
                        "last_10_years",
                        "last_1_hours",
                        "last_1_minutes",
                        "last_1_month",
                        "last_1_week",
                        "last_1_year",
                        "last_24_hours",
                        "last_5_minutes",
                        "last_6_hours",
                        "today",
                        "yesterday"
                    ],
                    "type": "string"
                },
                "date_range_format": {
                    "description": "Date range format to send to DB Query / URL",
                    "type": "string"
                },
                "debug": {
                    "type": "boolean"
                },
                "height": {
                    "description": "Item height (css)",
                    "type": "string"
                },
                "id": {
                    "description": "Unique ID you want to use",
                    "type": "string"
                },
                "refresh_interval": {
                    "description": "Interval for refresh eg (1s / 1m / 1h 10d)",
                    "type": "string"
                },
                "source": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/SqliteSource"
                        },
                        {
                            "$ref": "#/definitions/URLSource"
                        },
                        {
                            "$ref": "#/definitions/FSSource"
                        }
                    ],
                    "description": "Source for data"
                },
                "title": {
                    "description": "Widget title",
                    "type": "string"
                },
                "user_agent": {
                    "description": "Custom user agent for URL source",
                    "type": "string"
                },
                "width": {
                    "description": "Item width (css)",
                    "type": "string"
                },
                "x": {
                    "$ref": "#/definitions/AxisConfig",
                    "description": "Left to right axis"
                },
                "y": {
                    "$ref": "#/definitions/AxisConfig",
                    "description": "Top to bottom axis"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "server": {
            "$ref": "#/definitions/ServerConfig"
        },
        "tasks": {
            "items": {
                "$ref": "#/definitions/Task"
            },
            "type": "array"
        },
        "title": {
            "description": "Name for dashboard (title)",
            "type": "string"
        },
        "widgets": {
            "description": "Widgets",
            "items": {
                "$ref": "#/definitions/WidgetConfig"
            },
            "type": "array"
        }
    },
    "type": "object"
}

